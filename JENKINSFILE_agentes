pipeline {
    agent any

    options { skipDefaultCheckout() }

    stages {

        stage('Get Code') {
            steps {
                // Clona el repositorio con el código
                git 'https://github.com/JulioEguis/helloworld.git'

                // Muestra el workspace actual
                echo WORKSPACE
                bat 'dir'

                // Guarda el código para reutilizarlo en otros agentes
                stash name: 'code', includes: '**'
            }
        }

        stage('Build') {
            steps {
                echo 'Eyyy, esto es Python. No hay que compilar nada!!!'
            }
        }

        stage('Unit') {
            agent { label 'agent1' }
            steps {
                catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                    unstash 'code'
                    bat '''
                        set PYTHONPATH=%WORKSPACE%
                        C:\\Users\\julioe\\AppData\\Local\\Programs\\Python\\Python313\\Scripts\\pytest.exe --junitxml=result-unit.xml test\\unit
                    '''
                    stash name: 'unit-res', includes: 'result-unit.xml'
                }
            }
        }    
                stage('Rest') {
                    agent { label 'agent2' }
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                            unstash 'code'
                            bat '''
                                set FLASK_APP=app\\api.py
                                start flask run

                                start java -jar C:\\UNIR\\Ejercicios\\wiremock\\wiremock-jre8-standalone-2.28.0.jar --port 9090 --root-dir C:\\UNIR\\Ejercicios\\wiremock

                                :: Espera para que los servicios arranquen
                                ping -n 10 127.0.0.1

                                set PYTHONPATH=%WORKSPACE%
                                pytest --junitxml=result-rest.xml test\\rest

                                :: MATAR servicios para que el pipeline termine
                                taskkill /IM flask.exe /F
                                taskkill /IM java.exe /F

                            '''
                            stash name: 'rest-res', includes: 'result-rest.xml'
                        }
                    }
                }
            }
        }

        stage('Results') {
            steps {
                unstash 'unit-res'
                unstash 'rest-res'
                junit 'result*.xml'
            }
        }
    }
}
