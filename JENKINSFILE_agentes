pipeline {
    agent none // CORRECCIÓN 1: Flujo principal en el Master/Built-in Node

    options { skipDefaultCheckout() }

    stages {
        stage('Get Code') {
            agent { label 'master' } // CORRECCIÓN 2: Asignar al Master
            steps {
                git 'https://github.com/JulioEguis/helloworld.git'
                echo WORKSPACE
                
                // *** CORRECCIÓN NECESARIA ***
                // Reemplazar 'bat dir' (Windows) por 'sh ls -la' (Linux)
                sh 'ls -la'
                
                stash name:'code', includes:'**'
            }
        }
    
        stage('Build') {
            agent { label 'master' } // CORRECCIÓN 2: Asignar al Master
           steps {
              echo 'Eyyy, esto es Python. No hay que compilar nada!!!'
           }
        }
        
        stage('Tests')
        {
            parallel
            {
                stage('Unit') {
                    agent {label 'agent1'}
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                            unstash name:'code'
                            sh '''
                                ls -la
                                export PYTHONPATH=${WORKSPACE}
                                /usr/bin/pytest --junitxml=result-unit.xml test/unit
                            '''
                            stash name:'unit-res', includes:'result-unit.xml'
                       }
                    }
                }   
                
                
                stage('Rest') {
                    agent {label 'agent2'}
                    steps {
                      catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                        unstash name:'code'
                        sh '''
                            export FLASK_APP=app/api.py                          
                            /usr/bin/flask run &

                            sleep 4

                            java -jar /home/agent2/wiremock/wiremock-standalone-3.3.1.jar --port 9090 --root-dir /home/agent2/wiremock & // RUTA WIREMOCK CONFIRMADA
                            export PYTHONPATH=${WORKSPACE
                            
                            sleep 15
                            
                            /usr/bin/pytest --junitxml=result-rest.xml test/rest // ¡RUTA CORREGIDA A /usr/bin/pytest!
                        '''
                      }
                      stash name:'rest-res', includes:'result-rest.xml'
                    }    
                }                
                
            }
        }

        stage('Results') {
            agent { label 'master' } // CORRECCIÓN 2: Asignar al Master
            steps {
                unstash name:'unit-res'
                unstash name:'rest-res'
                junit 'result*.xml' 
            }
        }
     
    }
}
