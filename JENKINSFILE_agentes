pipeline {
    // 1. CORRECCIÓN: Flujo principal en el Master para liberar a agent2
    agent none 

    options { skipDefaultCheckout() }

    stages {
        stage('Get Code') {
            // Asignar al Master (usando 'master' si renombraste/etiquetaste el nodo 'principal')
            agent { label 'master' } 
            steps {
                git 'https://github.com/JulioEguis/helloworld.git'
                echo WORKSPACE
                
                sh 'ls -la'
                
                stash name:'code', includes:'**'
            }
        }
    
        stage('Build') {
            // Asignar al Master
            agent { label 'master' } 
            steps {
                echo 'Eyyy, esto es Python. No hay que compilar nada!!!'
            }
        }
        
        stage('Tests')
        {
            parallel
            {
                stage('Unit') {
                    agent {label 'agent1'}
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                            unstash name:'code'
                            sh '''
                                ls -la
                                export PYTHONPATH=${WORKSPACE}
                                /usr/bin/pytest --junitxml=result-unit.xml test/unit // RUTA PYTEST OK
                            '''
                            stash name:'unit-res', includes:'result-unit.xml'
                        }
                    }
                }   
                
                stage('Rest') {
                    agent {label 'agent2'}
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                            unstash name:'code'
                            sh '''
                                export FLASK_APP=app/api.py
                                
                                /usr/bin/flask run & // RUTA FLASK CORREGIDA

                                sleep 4

                                java -jar /home/agent2/wiremock/wiremock-standalone-3.3.1.jar --port 9090 --root-dir /home/agent2/wiremock & // RUTA WIREMOCK CONFIRMADA
                                export PYTHONPATH=${WORKSPACE} // CORRECCIÓN: Se añade la llave de cierre
                                
                                sleep 15
                                
                                /usr/bin/pytest --junitxml=result-rest.xml test/rest // RUTA PYTEST CORREGIDA
                            '''
                            stash name:'rest-res', includes:'result-rest.xml'
                        }
                    }   
                }       
            }
        }

        stage('Results') {
            // Asignar al Master
            agent { label 'master' } 
            steps {
                unstash name:'unit-res'
                unstash name:'rest-res'
                junit 'result*.xml' 
            }
        }
    }
}
