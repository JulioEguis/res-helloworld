pipeline {
    agent none 

    options { skipDefaultCheckout() }

    stages {
        stage('Get Code') {
            agent { label 'master' } 
            steps {
                git 'https://github.com/JulioEguis/helloworld.git'
                echo WORKSPACE
                bat 'dir' 
                stash name:'code', includes:'**'
            }
        }
    
        stage('Build') {
            agent { label 'master' } 
            steps {
                echo 'Eyyy, esto es Python. No hay que compilar nada!!!'
            }
        }
        
        stage('Tests')
        {
            parallel
            {
                stage('Unit') {
                    agent {label 'agent1'}
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                            unstash name:'code'
                            sh '''
                                ls -la
                                export PYTHONPATH=${WORKSPACE}
                                /usr/bin/pytest --junitxml=result-unit.xml test/unit
                            '''
                            stash name:'unit-res', includes:'result-unit.xml'
                        }
                    }
                }   
                
                stage('Rest') {
        agent {label 'agent2'}
        steps {
            catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                unstash name:'code'
                sh '''
                    # 1. COPIAR MAPPINGS (Esto ahora funciona gracias a chown)
                    cp -r test/wiremock/* /home/agent2/wiremock/

                    # 2. INICIAR FLASK
                    export FLASK_APP=app/api.py
                    /usr/bin/flask run & 

                    sleep 4

                    # 3. ðŸš¨ CORRECCIÃ“N FINAL DE LA RUTA DEL JAR
                    # Volvemos a la ruta /home/agent2/wiremock/ que es donde EXISTE el JAR
                    java -jar /home/agent2/wiremock/wiremock-standalone-3.3.1.jar --port 9090 --root-dir /home/agent2/wiremock &
                    
                    export PYTHONPATH=${WORKSPACE}
                    
                    sleep 15
                    
                    # 4. EJECUTAR PRUEBAS
                    /usr/bin/pytest --junitxml=result-rest.xml test/rest
                '''
                stash name:'rest-res', includes:'result-rest.xml'
                }
            }   
        }
    }
}

        stage('Results') {
            agent { label 'master' } 
            steps {
                unstash name:'unit-res'
                unstash name:'rest-res' 
                junit 'result*.xml' 
            }
        }
    }
}
