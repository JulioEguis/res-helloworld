pipeline {
    agent none 

    options { skipDefaultCheckout() }

    stages {
        stage('Get Code') {
            agent { label 'master' } 
            steps {
                git 'https://github.com/JulioEguis/helloworld.git'
                echo WORKSPACE
                bat 'dir' 
                stash name:'code', includes:'**'
            }
        }
    
        stage('Build') {
            agent { label 'master' } 
            steps {
                echo 'Eyyy, esto es Python. No hay que compilar nada!!!'
            }
        }
        
        stage('Tests')
{
    parallel
    {
        stage('Unit') {
            agent {label 'agent1'}
            steps {
                catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                    unstash name:'code'
                    sh '''
                        ls -la
                        export PYTHONPATH=${WORKSPACE}
                        # ðŸš¨ Cambio a la ruta especÃ­fica del profesor
                        /home/jenkins/.local/bin/pytest --junitxml=result-unit.xml test/unit
                    '''
                    stash name:'unit-res', includes:'result-unit.xml'
                }
            }
        }   
        
        stage('Rest') {
            agent {label 'agent2'}
            steps {
                catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                    unstash name:'code'
                    sh '''
                        # Mantenemos la copia de stubs (cp -r) porque no tienes el mount de volumen
                        cp -r test/wiremock/* /home/agent2/wiremock/

                        # ðŸš¨ Cambio a la ruta especÃ­fica del profesor
                        export FLASK_APP=app/api.py
                        /home/jenkins/.local/bin/flask run & 

                        sleep 4

                        java -jar /home/agent2/wiremock/wiremock-standalone-3.3.1.jar --port 9090 --root-dir /home/agent2/wiremock &
                        
                        export PYTHONPATH=${WORKSPACE}
                        
                        sleep 15
                        
                        # ðŸš¨ Cambio a la ruta especÃ­fica del profesor
                        /home/jenkins/.local/bin/pytest --junitxml=result-rest.xml test/rest
                    '''
                    stash name:'rest-res', includes:'result-rest.xml'
                }
            }   
        }       
    }
}

        stage('Results') {
            agent { label 'master' } 
            steps {
                unstash name:'unit-res'
                unstash name:'rest-res' 
                junit 'result*.xml' 
            }
        }
    }
}
